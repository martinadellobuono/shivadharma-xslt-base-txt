      <div type="chapter" n="1">
        <head type="introduction">
          Śivadharmottare ṣaḍaṅgavidhir nāma prathamo ’dhyāyaḥ
        </head>
        <!-- stanza omitted -->
        <div type="section" n="1">
          <div type="base-text">
            <lg met="">
              <gap>
                <app xml:id="app-1-1-1" resp="#flodes" loc="1">
                  <lem wit="#NK28 #NKO77 #P" rend="">om.</lem>
                  <rdg wit="#PT75" rend="">śivam astu sarvajagatāṃ --- parahitaniratā bhavantu bhūtaguṇāḥ | doṣāḥ prayāntu śāntiṃ -- sarvatra sukhībhavantu sakalalokāḥ ||    </rdg>
                </app>
              </gap>
            </lg>
          </div>
        </div>
        <!-- stanza 1 -->
        <div type="section" n="1">
          <div type="base-text">
            <lg met="Vaṃśastha" n="1">
              <l n="a">
                śrutimātranamo ’stu tasmai śakalendu<app xml:id="app-1-1-1-1a" resp="#flodes" loc="1a">
                  <lem wit="#NK82 #NO15 #E" rend="circlefront">dhāriṇe</lem>
                  <rdg wit="#NC45" rend="">dhāraṇe</rdg>
                </app>
              </l>
              <l n="b">
                phaṇīndraratnadyutikaṇṭha
                <app xml:id="app-1-1-1b" resp="#flodes" loc="1b">
                  <lem wit="#NC45 #NO15 #E" rend="circlefront">rāgiṇe</lem>
                  <rdg wit="#NK82" rend="">dhāriṇeṃ</rdg>
                </app>
              </l>
              <l n="c">
                harāya śubhrābhrakapālamāline
              </l>
              <l n="d">
                vibhinnadaityasphuritaikaśūline
              </l>
            </lg>
          </div>
        </div>
        <!-- stanza 2 -->
        <div type="section" n="1">
          <div type="base-text">
            <lg met="Anuṣṭubh" n="2">
              <l n="a">
                jñānaśaktidharaṃ śāntaṃ
              </l>
              <l n="b">
                kumāraṃ śaṅkarātmajam
              </l>
              <l n="c">
                devāri
                <app xml:id="app-1-1-2c" resp="#flodes" loc="2c">
                  <lem wit="#NK28 #P" rend="">sūdanaṃ</lem>
                  <rdg wit="#NC45 #NK82 #NKo77 #E" rend="">skandanaṃ</rdg>
                  <rdg wit="#NO15" rend="">skadanaṃ</rdg>
                </app>
                skandam
              </l>
              <l n="d">
                agastiḥ paripṛcchati
              </l>
            </lg>
          </div>
        </div>
        <div type="uvaca">
          agastir uvāca
        </div> 
