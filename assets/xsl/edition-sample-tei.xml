  <text xml:lang="it">
    <body>
      <div type="base-text">
        <div type="chapter" n="1">
          <head type="introduction">
            Śivadharmottare ṣaḍaṅgavidhir nāma prathamo &#8217;dhyāyaḥ
          </head>
          <!-- stanza 1 -->
          <div type="section" n="1">
            <lg met="Vaṃśastha">
              <gap>
                <app xml:id="app-1-1-1-1" resp="#flodes">
                  <lem wit="#NK28 #NKo77 #P" rend=""><gap></gap></lem>
                  <rdg wit="#PT75" rend="">
                    <lg met="">
                      <l n="a">śivam astu sarvajagatāṃ</l>
                      <l n="b">parahitaniratā bhavantu bhūtaguṇāḥ</l>
                      <l n="c">doṣāḥ prayāntu śāntiṃ</l>
                      <l n="d">sarvatra sukhībhavantu sakalalokāḥ</l>
                    </lg>
                  </rdg>
                </app>
              </gap>
              <l n="a">
                namo &#8217;stu tasmai śakalendu<app xml:id="app-1-1-1a-1" resp="#flodes">
                  <lem wit="#NK82 #NO15 #E" rend="circlefront">dhāriṇe</lem>
                  <rdg wit="#NC45" rend="">dhāraṇe</rdg>
                </app>
              </l>
              <l n="b">
                phaṇīndraratnadyutikaṇṭha<app xml:id="app-1-1-1b-1" resp="#flodes">
                  <lem wit="#NC45 #NO15 #E" rend="circlefront">rāgiṇe</lem>
                  <rdg wit="#NK82" rend="">dhāriṇeṃ</rdg>
                </app>
              </l>
              <l n="c">
                harāya śubhrābhrakapālamāline
              </l>
              <l n="d">
                vibhinnadaityasphuritaikaśūline
              </l>
            </lg>
          </div>
          <!-- stanza 2 -->
          <div type="section" n="2">
            <lg met="Anuṣṭubh">
              <l n="a">
                jñānaśaktidharaṃ śāntaṃ
              </l>
              <l n="b">
                kumāraṃ śaṅkarātmajam
              </l>
              <l n="c">
                devāri<app xml:id="app-1-1-2c-1" resp="#flodes">
                  <lem wit="#NK28 #P" rend="circlefront">sūdanaṃ</lem>
                  <rdg wit="#NC45 #NK82 #NKo77 #E" rend="circlefront">skandanaṃ</rdg>
                  <rdg wit="#NO15" rend="circlefront">skadanaṃ</rdg>
                </app>
                <app xml:id="app-1-1-2c-2" resp="#flodes">
                  <lem wit="#NC45 #NK28 #NK82 #NKo77 #P #E" rend="">skandam</lem>
                  <rdg wit="#NO15" rend="">skadanam</rdg>
                </app>
              </l>
              <l n="d">
                <app xml:id="app-1-1-2d-1" resp="#flodes">
                  <lem wit="#N #E" rend="">agastiḥ paripṛcchati</lem>
                  <rdg wit="#PT75" rend="">agastyaḥ paripṛcchati</rdg>
                  <rdg wit="#GP43" rend="">agastyaḥ parapracchati</rdg>
                </app>
              </l>
            </lg>
          </div>
          <div type="uvaca">
            agastir uvāca
          </div> 
          <!-- stanza 3 -->
          <div type="section" n="3">
            <lg met="Anuṣṭubh">
              <l n="a">
                bhagavan darśanāt tubhyam
              </l>
              <l n="b">
                <app xml:id="app-1-3-3b-1" resp="#flodes">
                  <lem wit="#Σ" rend="">antyajasyāpi</lem>
                  <rdg wit="#NK82" rend="">antajasyāpi</rdg>
                </app>
                <app xml:id="app-1-3-3b-2" resp="#flodes">
                  <lem wit="#Σ" rend="">sadgatiḥ</lem>
                  <rdg wit="#GP43cm" rend="">dgatiḥ</rdg>
                </app>
              </l>
              <l n="c">
                sapta<app xml:id="app-1-3-3c-1" resp="#flodes">
                  <lem wit="#N #E" rend="circlefront">janmāni</lem>
                  <rdg wit="#PT75" rend="circlefront">janmani</rdg>
                  <rdg wit="#GP43" rend="circlefront">janmasu</rdg>
                </app>
                <app xml:id="app-1-3-3c-2" resp="#flodes">
                  <lem wit="#NK28 #NKo77 #NO15" rend="">vipraś ca</lem>
                  <rdg wit="#NC45 #NK82 #PT75 #E" rend="">viprastu</rdg>
                  <rdg wit="#GP43" rend="">vipraścā</rdg>
                </app>
              </l>
              <l n="d">
                <app xml:id="app-1-3-3d-1" resp="#flodes">
                  <lem wit="#Σ" rend="">svargād</lem>
                  <rdg wit="#NO15" rend="">svargīḥ</rdg>
                </app>
                <app xml:id="app-1-3-3d-2" resp="#flodes">
                  <lem wit="#Σ" rend="">bhraṣṭaḥ prajāyate</lem>
                  <rdg wit="#GP43" rend="">hṛṣṭasya jāyate</rdg>
                </app>
              </l>
            </lg>
          </div>
          <!-- stanza 4 -->
          <div type="section" n="4">
            <lg met="Anuṣṭubh">
              <l n="a">
                <app xml:id="app-1-4-4a-1" resp="#flodes">
                  <lem wit="#N #E" rend="">tenāsi</lem>
                  <rdg wit="#PT75" rend="">tenāpi</rdg>
                  <rdg wit="#GP43" rend="">yenāsi</rdg>
                </app>
                  nātha bhūtānāṃ
              </l>
              <l n="b">
                sarveṣām anukampakaḥ
              </l>
              <l n="c">
                ataḥ 
                <app xml:id="app-1-4-4c-1" resp="#flodes">
                  <lem wit="#Σ" rend="">sarvahitaṃ</lem>
                  <rdg wit="#PT75" rend="">saṃkṣepato</rdg>
                </app>
                <app xml:id="app-1-4-4c-2" resp="#flodes">
                  <lem wit="#Σ" rend="">dharmaṃ</lem>
                  <rdg wit="#NC45" rend="">dharma</rdg>
                </app>
              </l>
              <l n="d">
                <app xml:id="app-1-4-4c-3" resp="#flodes">
                  <lem wit="#NC45 #NK82 #E" rend="">saṃkṣepāt prabravīhi me</lem>
                  <rdg wit="#NK28" rend="">saṃkṣepāt prabravīhi taḥ</rdg>
                  <rdg wit="#NKo77" rend="">saṃkṣepāt prabrahīhi taḥ</rdg>
                  <rdg wit="#NO15" rend="">saṃkṣepāt tad bravīhi me</rdg>
                  <rdg wit="#GP43" rend="">sukṣepāt prabravīhi me</rdg>
                  <rdg wit="#PT75" rend="">brūhi sarvahitaṃ mama</rdg>
                </app>
              </l>
            </lg>
          </div>      
          <!-- stanza 5 -->
          <div type="section" n="5">
            <lg met="Anuṣṭubh">
              <l n="a">
                dharmā bahuvidhā
                <app xml:id="app-1-5-5a-1" resp="#flodes">
                  <lem wit="em." rend="">devyai</lem>
                  <rdg wit="#Σ" rend="">devyā</rdg>
                  <rdg wit="#E" rend="">devyāḥ</rdg>
                </app>
              </l>
              <l n="b">
                devena
                <app xml:id="app-1-5-5b-1" resp="#flodes">
                  <lem wit="#NK82 #NKo77 #GP43 #PT75" rend="">kathitāḥ</lem>
                  <rdg wit="#NK28 #E" rend="">kathitā</rdg>
                </app>
                <app xml:id="app-1-5-5b-2" resp="#flodes">
                  <lem wit="#NK28 #NK82 #NKo77 #NO15 #E #PT75" rend="">kila</lem>
                  <rdg wit="#NC45" rend="">kilaḥ</rdg>
                  <rdg wit="#GP43" rend="">kilā</rdg>
                </app>
              </l>
              <l n="c">
                te ca 
                <app xml:id="app-1-5-5c-1" resp="#flodes">
                  <lem wit="#NC45 #NK82 #E #PT75" rend="">śrutās tvayā</lem>
                  <rdg wit="#NK28" rend="">śrutā tvayā</rdg>
                  <rdg wit="#NKo77" rend="">śrutvā tvayā</rdg>
                  <rdg wit="#NO15" rend="">śrutvāskṛyā</rdg>
                  <rdg wit="#GP43" rend="">śrutās vayā</rdg>
                </app>
                sarve
              </l>
              <l n="d">
                pṛcchāmi tvām ahaṃ
                <app xml:id="app-1-5-5d-1" resp="#flodes">
                  <lem wit="#NC45 #NK82 #NKo77 #P #E" rend="">tataḥ</lem>
                  <rdg wit="#NK28 #NO15" rend="">punaḥ</rdg>
                </app>
              </l>
            </lg>
          </div>      
          <!-- stanza 6 --> 
          <div type="section" n="6">
            <lg met="Anuṣṭubh">
              <l n="a">
                kiṃpradhānāḥ 
                <app xml:id="app-1-6-6a-1" resp="#flodes">
                  <lem wit="#NC45 #NK28 #NK82 #P" rend="">śive dharmāḥ</lem>
                  <rdg wit="#NKo77" rend="">śivādharmo</rdg>
                  <rdg wit="#NO15" rend="">śivedharmā</rdg>
                  <rdg wit="#E" rend="">śivadharmāḥ</rdg>
                </app> 
              </l>
              <l n="b">
                śivavākyaṃ ca kīdṛśam
              </l>
              <l n="c">
                <app xml:id="app-1-6-6c-1" resp="#flodes">
                  <lem wit="#NC45 #NK28 #NK82 #NO15 #P #E" rend="">liṅge</lem>
                  <rdg wit="#NKo77" rend="">liṅgo</rdg>
                  <rdg wit="#PT75" rend="">
                    śivaḥ
                    <witDetail wit="#PT75" type="pc"/>
                  </rdg>
                </app>
                ’rcitaḥ śivaḥ kena
              </l>
              <l n="d">
                vidhinā samprasīdati
              </l>
            </lg>
          </div>     
          <!-- stanza 7 -->
          <div type="section" n="7">
            <lg met="Anuṣṭubh">
              <l n="a">
                vidyādānaṃ ca
                <app xml:id="app-1-7-7a-1" resp="#flodes">
                  <lem wit="#Σ" rend="">dānānāṃ</lem>
                  <rdg wit="#PT75" rend="">sarveṣām</rdg>
                </app>
                <note xml:id="nt-1-7-7a-1" type="philological" resp="#flodes">
                  In #PT75 "dānānāṃ sarveṣām" is inverted: "sarveṣām dānānāṃ".
                </note> 
              </l>
              <l n="b">
                <app xml:id="app-1-7-7b-1" resp="#flodes">
                  <lem wit="#Σ" rend="">sarveṣām</lem>
                  <rdg wit="#PT75" rend="">dānānāṃ</rdg>
                </app>
                <app xml:id="app-1-7-7b-2" resp="#flodes">
                  <lem wit="#Σ" rend="">uttamaṃ</lem>
                  <rdg wit="#GP43" rend="">uttamā</rdg>
                </app>
                kila
              </l>
              <l n="c">
                tac ca śrutau dvijendrāṇāṃ
              </l>
              <l n="d">
                nānyeṣāṃ samudāhṛtam
              </l> 
            </lg>
          </div>      
          <!-- stanza 8 -->
          <div type="section" n="8">
            <lg met="Anuṣṭubh">
              <l n="a">
                tatpuṇyaṃ sarvavarṇānāṃ
              </l>
              <l n="b">
                jāyate kena karmaṇā
              </l>
              <l n="c">
                jñeyaṃ katividhaṃ
                <app xml:id="app-1-8-8c-1" resp="#flodes">
                  <lem wit="#Σ" rend="">tac ca</lem>
                  <rdg wit="#NKo77" rend="">ta ca</rdg>
                </app>
              </l>
              <l n="d">
                vidyādānam
                <!-- lacuna -->
                <app xml:id="app-1-8-8d-1" resp="#flodes">
                  <rdg wit="#NK28">
                    <lacunaStart/>dyā<lacunaEnd/>m
                  </rdg>
                </app>
                anuttamam
              </l>
            </lg>
          </div>      
          <!-- stanza 9 -->
          <div type="section" n="9">
            <lg met="Anuṣṭubh">
              <l n="a">
                kāni
                <app xml:id="app-1-9-9a-1" resp="#flodes">
                  <lem wit="#N #E" rend="">puṇyāni kṛtveha</lem>
                  <rdg wit="#GP43" rend="">karmaṇi kṛtveha</rdg>
                  <rdg wit="#PT75" rend="">kṛtvaiva karmāṇi</rdg>
                </app>
              </l>
              <l n="b"> 
                <app xml:id="app-1-9-9b-1" resp="#flodes">
                  <lem wit="#N #PT75" rend="">gṛhiṇaḥ svargatāḥ</lem>
                  <rdg wit="#GP43cm" rend="">gṛhasthasvarggāt</rdg>
                  <rdg wit="#E" rend="">gṛhiṇaḥ svargiṇaḥ</rdg>
                </app>
                punaḥ
              </l>
              <l n="c">
                <app xml:id="app-1-9-9c-1" resp="#flodes">
                  <lem wit="#NC45 #NK28 #NKo77 #NO15 #E" rend="circleback">manuṣyaloka</lem>
                  <rdg wit="#NK82 #P" rend="">manuṣyaloke</rdg>
                </app>sambhūtā
              </l>
              <l n="d">
                yogaṃ 
                <app xml:id="app-1-9-9d-1" resp="#flodes">
                  <lem wit="#NK82 #NKo77 #PT75 #E" rend="">vindanti śāṅkaram</lem>
                  <rdg wit="#NC45" rend="">vidanti śaṅkaram</rdg>
                  <rdg wit="#NK28" rend="">vindanti śaṅkaram</rdg>
                  <rdg wit="#NO15" rend="">vindanti sākaram</rdg>
                </app>
              </l>
            </lg>
          </div>      
          <!-- stanza 10 --> 
          <div type="section" n="10">
            <lg met="Anuṣṭubh">
              <l n="a"> 
                <app xml:id="app-1-10-10a-1" resp="#flodes">
                  <lem wit="#NC45 #NK82  #PT75 #E" rend="">karmayajñas</lem>
                  <rdg wit="#NK28" rend="">karmayajña</rdg>
                  <rdg wit="#NO15" rend="">karmayajñās</rdg>
                </app>
                tapoyajñaḥ
              </l>
              <l n="b">
                svādhyāyo
                <app xml:id="app-1-10-10b-1" resp="#flodes">
                  <lem wit="#N #E" rend="">dhyānam eva ca</lem>
                  <rdg wit="#GP43" rend="">dhyānanirmmitaḥ</rdg>
                  <rdg wit="#PT75" rend="">dhyānanirvṛttiḥ</rdg>
                </app>
                <app xml:id="app-1-10-10b-1" resp="#flodes">
                  <rdg wit="#Nko77">
                    <lacunaStart/>dhyā<lacunaEnd/>ca
                  </rdg>
                </app>
              </l>
              <l n="c">
                jñānayajñaś ca pañcaite
              </l>
              <l n="d">
                mahāyajñāḥ prakīrtitāḥ
              </l>
            </lg>
          </div>      
          <!-- stanza 11 -->
          <div type="section" n="11">
            <lg met="Anuṣṭubh">
              <l n="a">
                <app xml:id="app-1-11-11a-1" resp="#flodes">
                  <lem wit="#NC45 #NK28 #NKo77 #NO15 #PT75 #E" rend="">eṣāṃ ca</lem>
                  <rdg wit="#NK82 #GP43" rend="">eteṣām</rdg>
                </app>
                pañcayajñānām
              </l>
              <l n="b">
                <app xml:id="app-1-11-11b-1" resp="#flodes">
                  <lem wit="#Σ" rend="">uttamaḥ katamaḥ</lem>
                  <rdg wit="#NO15" rend="">uttamakattamaḥ</rdg>
                </app>
                smṛtaḥ
              </l>
              <l n="c">
                etadyajñaratānāṃ ca
              </l>
              <l n="d">
                pradāne
                <app xml:id="app-1-11-11d-1" resp="#flodes">
                  <lem wit="#Σ" rend="">kīdṛśaṃ</lem>
                  <rdg wit="#NO15" rend="">kīdṛśa</rdg>
                </app>
                phalam
              </l>
            </lg>
          </div>      
          <!-- stanza 12 -->
          <div type="section" n="12">
            <lg met="Anuṣṭubh">
              <l n="a">
                dharmādharma<app xml:id="app-1-12-12a-1" resp="#flodes">
                  <lem wit="#NC45 #NK82 #NKo77 #P #E" rend="circlefront">prabhedāś</lem>
                  <rdg wit="#NK28 #NO15" rend="circlefront">prabhedāt</rdg>
                </app> 
                ca
              </l>
              <l n="b">
                kiyantaḥ
                <app xml:id="app-1-12-12b-1" resp="#flodes">
                  <lem wit="#Σ" rend="">parikīrtitāḥ</lem>
                  <rdg wit="#NO15" rend="">parikīrtitaṃ</rdg>
                </app>
              </l>
              <l n="c">
                tat<app xml:id="app-1-12-12c-1" resp="#flodes">
                  <lem wit="#NC45 #NK28 #NK82 #NO15 #E" rend="circlefront">sādhanāḥ katividhā</lem>
                  <rdg wit="#NKo77" rend="">sādhanā katividhā</rdg>
                  <rdg wit="#GP43" rend="">sādhanāni kativā</rdg>
                  <rdg wit="#PT75" rend="">sādhanāni katidhā</rdg>
                </app>
              </l>
              <l n="d">
                gatayaś ca
                <app xml:id="app-1-12-12d-1" resp="#flodes">
                  <lem wit="#NC45 #NK28 #NK82 #NKo77 #PT75 #E" rend="">tadātmikāḥ</lem>
                  <rdg wit="#NO15" rend="">tadātmikāṃ</rdg>
                  <rdg wit="#GP43" rend="">tadātmikā</rdg>
                </app>
              </l>
            </lg>
          </div>       
          <!-- stanza 13 -->
          <div type="section" n="13">
            <lg met="Anuṣṭubh">
              <l n="a">
                <app xml:id="app-1-13-13a-1" resp="#flodes">
                  <lem wit="#NC45 #NK82 #NKo77 #E" rend="">svarganārakiṇāṃ puṃsām</lem>
                  <rdg wit="#NK28" rend="">svarganārakiṇāṃ puṃsāmm</rdg>
                  <rdg wit="#NO15" rend="">svarganārakinām</rdg>
                  <rdg wit="#GP43" rend="">svarginārakinā puṃsām</rdg>
                  <rdg wit="#PT75" rend="">svargā nārakiṇāṃ</rdg>
                </app>
                <app xml:id="app-1-13-13a-1" resp="#flodes">
                  <rdg wit="#Nko77">
                    <lacunaStart/>rganā<lacunaEnd/>mā
                  </rdg>
                </app>
              </l>
              <l n="b">
                <app xml:id="app-1-13-13b-1" resp="#flodes">
                  <lem wit="#NC45 #NK28 #NK82 #NO15 #PT75 #E" rend="">āyātānāṃ punaḥ</lem>
                  <rdg wit="#NKo77" rend="">āyātānāṃ puna</rdg>
                  <rdg wit="#GP43" rend="">āgatānām puna</rdg>
                </app>
                kṣitau
              </l>
              <l n="c">
                kāni cihnāni jāyante
                <app xml:id="app-1-13-13c-1" resp="#flodes">
                  <rdg wit="#NK28">
                    <lacunaStart/>kā<lacunaEnd/>ni
                  </rdg>
                </app>
              </l>
              <l n="d">
                <app xml:id="app-1-13-13d-1" resp="#flodes">
                  <lem wit="#Σ" rend="circleback">bhukta</lem>
                  <rdg wit="#NKo77" rend="">bhuktā</rdg>
                </app>śeṣeṇa karmaṇā
              </l>
            </lg>
          </div>      
          <!-- stanza 14 --> 
          <div type="section" n="14">
            <lg met="Anuṣṭubh">
              <l n="a">
                saṃsārasāgarād ghorād
              </l>
              <l n="b">
                dharmādharmormisaṅkulāt
              </l>
              <l n="c">
                garbhādiduḥkha<app xml:id="app-1-14-14c-1" resp="#flodes">
                  <lem wit="#NC45 #NK82 #GP43 #E" rend="circlefront">phenāḍhyān</lem>
                  <rdg wit="#NK28" rend="circlefront">phenāḍhyaḥ</rdg>
                  <rdg wit="#NKo77" rend="circlefront">phenāḍhya</rdg>
                  <rdg wit="#NO15" rend="circlefront">phenāṭha</rdg>
                  <rdg wit="#PT75" rend="circlefront">phenādvā</rdg>
                </app>
              </l>
              <l n="d">
                <app xml:id="app-1-14-14d-1" resp="#flodes">
                  <lem wit="#NC45 #NK82 #GP43 #E" rend="">mucyante</lem>
                  <rdg wit="#NK28" rend="">mucyate</rdg>
                </app>
                dehinaḥ katham
              </l>
            </lg>
          </div>      
          <!-- stanza 15 -->
          <div type="section" n="15">
            <lg met="Anuṣṭubh">
              <l n="a">
                iti
                <app xml:id="app-1-15-15a-1" resp="#flodes">
                  <lem wit="#NC45 #NK28 #NK82 #PT75 #E" rend="">sañcoditaḥ skandaḥ</lem>
                  <rdg wit="#NKo77" rend="">sañcoditaskanda</rdg>
                  <rdg wit="#NO15" rend="">sañcoditaṃ skandas</rdg>
                  <rdg wit="#GP43" rend="">sañcoditaskandas</rdg>
                </app>
              </l>
              <l n="b">
                sarvapraśn<app xml:id="app-1-15-15b-1" resp="#flodes">
                  <lem wit="#NC45 #NK82 #E" rend="circleback">ārthabhāṣakaḥ</lem>
                  <rdg wit="#NK28 #NKo77" rend="circleback">ārthabhāṣakaṃ</rdg>
                  <rdg wit="#NO15" rend="circleback">āvabhāsakaṃ</rdg>
                  <rdg wit="#PT75" rend="circleback">ārthānubhāvakaḥ</rdg>
                </app>
              </l>
              <l n="c">
                pratyuvāca 
                <app xml:id="app-1-15-15c-1" resp="#flodes">
                  <lem wit="#Σ" rend="">mahāseno</lem>
                  <rdg wit="#NK28" rend="">mahāsenau</rdg>
                </app>
              </l>
              <l n="d">
                <app xml:id="app-1-15-15d-1" resp="#flodes">
                  <lem wit="#NC45 #NK82 #NKo77 #NO15 #GP43" rend="">namaskṛtvā</lem>
                  <rdg wit="#NK28 #E" rend="">namaskṛtya</rdg>
                  <rdg wit="#PT75" rend="">praṇipatya</rdg>
                </app>
                maheśvaram
              </l>
            </lg>
          </div>       
          <!-- stanza 16 -->
          <div type="section" n="16">
            <lg met="Anuṣṭubh">
              <l n="a">
                svargāpavargaphaladaṃ
              </l>
              <l n="b">
                narakārṇava<app xml:id="app-1-16-16b-1" resp="#flodes">
                  <lem wit="#N #E" rend="circlefront">tārakam</lem>
                  <rdg wit="#P" rend="">tāraṇam</rdg>
                </app>
              </l>
              <l n="c">
                śivadharmottaraṃ nāma
                <app xml:id="app-1-16-16c-1" resp="#flodes">
                  <rdg wit="#NK28">
                    <lacunaStart/>rmo<lacunaEnd/>śā
                  </rdg>
                </app>
              </l>
              <l n="d">
                śāstram 
                <app xml:id="app-1-16-16d-1" resp="#flodes">
                  <lem wit="#Σ" rend="circlefront">īśvara</lem>
                  <rdg wit="#GP43" rend="">uttara</rdg>
                </app>bhāṣitam
              </l>
            </lg>
          </div> 
          <div type="uvaca">
            skanda uvāca
          </div>    
          <!-- stanza 17 -->
          <div type="section" n="17">
            <lg met="Anuṣṭubh">
              <l n="a">
              śraddhā<app xml:id="app-1-17-17a" resp="#flodes">
                <lem wit="#NC45 #NK28 #NK82 #NO15 #GP43 #E" rend="circlefront">pūrvāḥ</lem>
                <rdg wit="#NKo77" rend="">pūrvā</rdg>
                <rdg wit="#PT75" rend="circlefront">pūrṇā</rdg>
              </app>
              sarvadharmāḥ
              </l>
              <l n="b">
              śraddhāmadhyānta<app xml:id="app-1-17-17b" resp="#flodes">
                <lem wit="#Σ" rend="circlefront">saṃsthitāḥ</lem>
                <rdg wit="#GP43" rend="">saṃsthataḥ</rdg>
              </app>
              </l>
              <l n="c">
                śraddhā<app xml:id="app-1-17-17c" resp="#flodes">
                  <lem wit="#NK28 #NK82 #NKo77 #P" rend="circlefront">niṣṭhāḥ</lem>
                  <rdg wit="#NC45 #E" rend="circlefront">niṣṭhā</rdg>
                </app>
                pratiṣṭhāś ca 
              </l>
              <l n="d">
                dharmāḥ 
                <app xml:id="app-1-17-17c" resp="#flodes">
                  <lem wit="#Σ" rend="">śraddhaiva</lem>
                  <rdg wit="#NC45" rend="">śraddharva</rdg>
                </app>
                  kīrtitāḥ
              </l>
            </lg>
          </div>      
          <!-- stanza 18 --> 
          <div type="section" n="18">
            <lg met="Anuṣṭubh">
              <l n="a">
                <app xml:id="app-1-18-18a-1" resp="#flodes">
                  <lem wit="#Σ" rend="circleback">śruti</lem>
                  <rdg wit="#NO15" rend="">śrutiṃ</rdg>
                </app>mātra<app xml:id="app-1-18-18a-2" resp="#flodes">
                  <lem wit="#NC45 #NK28 #NK82 #P #E" rend="circlefront">rasāḥ</lem>
                  <rdg wit="#NKo77" rend="circlefront">ratāḥ</rdg>
                  <rdg wit="#NO15" rend="circlefront">rasā</rdg>
                </app>
                  sūkṣmāḥ
              </l>
              <l n="b">
                <app xml:id="app-1-18-18b" resp="#flodes">
                  <lem wit="#NC45 #NK28 #NK82 #P #E" rend="">pradhānapuruṣeśvarāḥ</lem>
                  <rdg wit="#NKo77" rend="">pradhānāḥ puruṣeśvarāḥ</rdg>
                  <rdg wit="#NO15" rend="">pradhānapuruṣeśvaraṃ</rdg>
                </app>
              </l>
              <l n="c">
                śraddhāmātreṇa gṛhyante
              </l>
              <l n="d">
                <app xml:id="app-1-18-18d" resp="#flodes">
                  <lem wit="#Σ" rend="">na kareṇa na cakṣuṣā</lem>
                  <rdg wit="#PT75cm" rend="">nakareṇā cakṣuṣā</rdg>
                </app>
              </l>
            </lg>
          </div>     
          <!-- stanza 19 -->   
          <div type="section" n="19">
            <lg met="Anuṣṭubh">
              <l n="a">
                <app xml:id="app-1-19-19a-1" resp="#flodes">
                  <lem wit="#Σ" rend="circleback">kāya</lem>
                  <rdg wit="#NKo77" rend="">kāla</rdg>
                </app>kleśair
                <app xml:id="app-1-19-19a-2" resp="#flodes">
                  <lem wit="#Σ" rend="">na bahubhir</lem>
                  <rdg wit="#GP43" rend="">makhaiś caivā</rdg>
                </app>
              </l>
              <l n="b">
                <app xml:id="app-1-19-19b-1" resp="#flodes">
                  <lem wit="#NE" rend="">na caivārthasya</lem>
                  <rdg wit="#GP43cm" rend="">caivarthāsya</rdg>
                  <rdg wit="#PT75" rend="circleback">caivārthani</rdg>
                </app>
                rāśibhiḥ
              </l>
              <l n="c">
                dharmaḥ samprāpyate sūkṣmaḥ
                <app xml:id="app-1-19-19C-1" resp="#flodes">
                  <rdg wit="#NK28">
                    <lacunaStart/>rmaḥ<lacunaEnd/>sū
                  </rdg>
                </app>
              </l>
              <l n="d">
                śraddhāhīnaiḥ surair api
              </l>
            </lg>
          </div>     
        </div>
      </div>
    </body>
